<div id="formularioCitas">
    <form action="./agregar" method="post">
        <h2>{{subtitulo}}</h2>
        <label for="cedulaPaciente">Número de Cédula:<span> *</span></label>
        <select id="cedulaPaciente" name="cedulaPaciente" required>
            <option value="">------------------- Seleccione la cedula del paciente -------------------</option>
            {{#each pacientes}}
            <option value="{{cedulaPaciente}}">{{cedulaPaciente}}</option>
            {{/each}}
        </select><br>
        <label for="fecha">Fecha:<span> *</span></label>
        <input type="date" id="fecha" name="fecha" required><br>
        <label for="especialidad">Especialidad requerida:<span> *</span></label>
        <select id="especialidad" name="especialidad" required>
            <option value="">------------------------ Seleccione la especialidad ---------------------</option>
            {{#each medicos}}
            <option value="{{especialidad}}">{{especialidad}}</option>
            {{/each}}
        </select><br>
        <input id="enviar" type="submit" value="Enviar" />
        <a class="volver" href="/citas">
        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-arrow-back" width="48" height="48" viewBox="0 0 24 24" stroke-width="1.5" stroke="#000000" fill="none" stroke-linecap="round" stroke-linejoin="round">
        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
        <path d="M9 11l-4 4l4 4m-4 -4h11a4 4 0 0 0 0 -8h-1" />
</svg>
        </a>
    </form>
</div>